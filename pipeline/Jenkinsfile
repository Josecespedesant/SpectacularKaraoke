pipeline{
  agent any
  
  
  environment { 
      CI = 'true'
  }
  stages{
    stage ("Build"){
      steps {
        echo "Building the app..."
        dir ("/SpectacularKaraoke/API"){
          sh "npm install"
        }

      }
        
    }
    stage ("Test"){
      steps{
        echo "Testing the app"
        sh "./SpectacularKaraoke/API/test/test.js"
      }
    }
    stage ("Analyze"){
      steps{
        echo "Analyzing the app"
      }
      
    }
    stage ("Deploy"){
      steps{
        echo "Deploying the app"
      }
        
    }
  }
  
}
