pipeline{
  agent any
  
  
  environment { 
      CI = 'true'
  }
  stages{
    stage ("Build"){
      steps {
        echo "Building the app..."
        dir ("/var/lib/jenkins/workspace/SpectacularKaraoke/API"){
          sh "npm install --no-optional"
        }

      }
        
    }
    stage ("Test"){
      steps{
        echo "Testing the app"
        dir ("/var/lib/jenkins/workspace/SpectacularKaraoke/API/test"){
          sh "node test.js"
        }
        
      }
      
    }
    stage ("Analyze"){
      steps{
        echo "Analyzing the app"
      }
      
    }
    stage ("Deploy"){
      steps{
        echo "Deploying the app"
      }
        
    }
  }
  
}
